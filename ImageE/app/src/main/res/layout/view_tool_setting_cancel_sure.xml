<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_done"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 取消 -->
    <ImageView
        android:id="@+id/iv_cancel"
        android:src="@drawable/ic_tool_setting_cancel"
        android:layout_marginStart="@dimen/margin_start_cancel_sure"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/tool_setting_cancel_sure_image_size"
        android:layout_height="@dimen/tool_setting_cancel_sure_image_size" />

    <!-- 保存 -->
    <ImageView
        android:id="@+id/iv_sure"
        android:src="@drawable/ic_tool_setting_sure"
        android:layout_marginEnd="@dimen/margin_end_cancel_sure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/tool_setting_cancel_sure_image_size"
        android:layout_height="@dimen/tool_setting_cancel_sure_image_size" />

</androidx.constraintlayout.widget.ConstraintLayout>